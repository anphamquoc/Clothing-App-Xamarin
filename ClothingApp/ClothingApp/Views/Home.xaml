                <StackLayout Margin="0, 20" Spacing="15">
                    <Label Text="Các chức năng chính" FontSize="24" TextColor="Black" FontAttributes="Bold" />
                    <FlexLayout Direction="Row" JustifyContent="SpaceBetween" AlignItems="Center">
                        <StackLayout Orientation="Vertical" x:Name="shopping">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_1" />
                            </StackLayout.GestureRecognizers>
                            <Image Source="shopping_icon_color.png" WidthRequest="30" />
                            <Label Text="Mua sắm" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Orientation="Vertical">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped" />
                            </StackLayout.GestureRecognizers>
                            <Image Source="cart_icon_color.png" WidthRequest="30" />
                            <Label Text="Giỏ hàng" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Orientation="Vertical">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_2" />
                            </StackLayout.GestureRecognizers>
                            <Image Source="order_icon_color.png" WidthRequest="30" />
                            <Label Text="Đơn đặt hàng" HorizontalTextAlignment="Center" />
                        </StackLayout>
                        <StackLayout Orientation="Vertical">
                            <StackLayout.GestureRecognizers>
                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="TapGestureRecognizer_Tapped_3" />
                            </StackLayout.GestureRecognizers>
                            <Image Source="user_icon_color" WidthRequest="30" />
                            <Label Text="Người dùng" HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </FlexLayout>
                </StackLayout>
                <StackLayout Grid.Row="3" Grid.Column="1">
                    <FlexLayout JustifyContent="SpaceBetween" AlignItems="Center">
                        <Label Text="Hàng mới về" FontSize="24" FontAttributes="Bold" TextColor="Black" />
                        <Label>
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="Xem tất cả"
                                    TextColor="#7E7E7E"
                                      FontSize="16"
                                      >
                                        <Span.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding TapCommand}" />
                                        </Span.GestureRecognizers>
                                    </Span>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </FlexLayout>
                    <CollectionView x:Name="navigationCarousel" SelectionMode="Single" SelectionChanged="navigationCarousel_SelectionChanged" HeightRequest="200">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <ContentView>
                                    <Frame Padding="0" HasShadow="False" BackgroundColor="#FBFBFD" Margin="5" IsClippedToBounds="True" CornerRadius="5">
                                        <StackLayout>
                                            <Frame HasShadow="False" Padding="0" WidthRequest="100" HeightRequest="100">
                                                <Image Source="{Binding ImgUrl}" Aspect="AspectFill" />
                                            </Frame>
                                            <Label Text="{Binding Name}" TextColor="#808080" HorizontalOptions="Center" FontSize="18" />
                                            <Label Text="{Binding Price, StringFormat='{0:#,0.#}'}" HorizontalOptions="Center" TextColor="Black" FontAttributes="Bold" FontSize="20" />
                                        </StackLayout>
                                    </Frame>
                                </ContentView>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
